/** @var $this Zamoroka_Issuu_Block_List */
$issuuCollection = $this->getIssuu();
?>
<?php echo $this->getMessagesBlock()->getGroupedHtml() ?>
<?php if ($issuuCollection->getSize()): ?>
    <?php echo $this->getPagerHtml(); ?>
    <div class="category-products">
        <ol class="products-list" id="products-list">
            <?php foreach ($issuuCollection as $issuu) : ?>
                <?php $id = $issuu->getId(); ?>
                <li class="item">
                    <h3><a href="<?php echo $this->getIssuuViewUrl($id); ?>"><?php echo $issuu->getTitle(); ?></a></h3>
                    <a href="<?php echo $this->getIssuuViewUrl($id); ?>">
                        <img src="<?php echo $issuu->getThumbnailUrl() ?>"/>
                    </a>
                    <p><?php echo $issuu->getDescription(); ?></p>

                    <p class="a-right">
                        <a href="<?php echo $this->getIssuuViewUrl($id); ?>"><?php echo $this->__('Read more'); ?></a>
                    </p>
                </li>
            <?php endforeach; ?>
        </ol>
    </div>
    <?php echo $this->getPagerHtml(); ?>
<?php else: ?>
    <p><?php echo $this->__('There is no any issuu posts.'); ?></p>
<?php endif ?>
